#define ROW 9
#define COL 9

#define ROWS ROW+2
#define COLS COL+2

#define EASY_COUNT 10 //å®šä¹‰10

#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void InitBoard(char board[ROWS][COLS] ,int rows, int cols, char set);

void DisplayBoard(char board[ROWS][COLS], int row, int col);

void SetMine(char board[ROWS][COLS], int row, int col);

void FindMine(char mine[ROWS][COLS], char show[ROWS][COLS], int row, int col);//è¿™é‡Œéœ€è¦ä¸¤ä¸ªæ•°ç»„âœ¨




game.c
#define _CRT_SECURE_NO_WARNINGS 1

#include"game.h"

void InitBoard(char board[ROWS][COLS],int rows, int cols, char set)
{
	int i = 0;
	int j = 0;
	for(i=0 ; i < rows ; i++)
	{
		for(j=0 ; j < cols ; j++)
		{
			board[i][j] = set; //âœ¨
		}
	}
}

void DisplayBoard(char board[ROWS][COLS], int row, int col)
{
	int i = 0 ;
	int j = 0 ;
	//æ‰“å°åˆ—å·ï¼Œåæ ‡è½´å¯èƒ½æœ‰é—®é¢˜âœ¨
	for(i=0 ; i <= col; i++)
	{
		printf("%d ",i);
	}
	printf("\n");
	for(i = 1; i <= row; i++)
	{
		printf("%d ",i); //æ‰“å°åˆ—å·
		for(j = 1; j <= col ; j++)
		{
			printf("%c ",board[i][j]);

		}
			printf("\n");
	}
}

void SetMine(char board[ROWS][COLS], int row, int col)
{
	int count = EASY_COUNT;
	while(count)
	{
		int x = rand()%row + 1 ; //%rowçš„ä½™æ•°èŒƒå›´æ˜¯0-8ï¼Œæ‰€ä»¥åŠ 1ï¼Œå³1-9
		int y = rand()%col + 1 ;
		if(board[x][y] == '0')
		{
			board[x][y] = '1';
			count -- ; //æ˜¯ -- ï¼ï¼ï¼
		}
	}
}

int get_mine_count(char mine[ROWS][COLS], int x, int y)
{
	return 
		mine[x-1][y+1] +
		mine[x][y+1] +
		mine[x+1][y+1] +
		mine[x-1][y] +
		mine[x+1][y] +
		mine[x-1][y-1] +
		mine[x][y-1] +
		mine[x+1][y-1] - 8 * '0'; //è¿™é‡Œ'0'æ˜¯å­—ç¬¦ï¼Œ-8*'0'ç­‰åŒ- 8*0çš„ASCIIå€¼
}

void FindMine(char mine[ROWS][COLS], char show[ROWS][COLS], int row, int col)
{
	int x = 0;
	int y = 0;
	int win = 0 ;
	//9*9 - 10 = 71
	while(win < row * col - EASY_COUNT) //å¾ªç¯ç»“æŸçš„æ¡ä»¶ï¼Œå¾—èµ°71æ­¥ï¼Œæˆ–æ˜¯è¸©é›·âœ¨ //å±•å¼€åŠŸèƒ½çš„ä½¿ç”¨ï¼
	{
		
		printf("è¯·è¾“å…¥æ’æŸ¥é›·çš„åæ ‡:>");
		scanf("%d%d", &x, &y);
		if(x >=1 && x <= row && y >= 1 && y <= col) //åæ ‡æ˜¯å¦åˆæ³•
		{
			if(mine[x][y] == '1') //æ˜¯é›·
			{
				printf("Defeat!\n");
				DisplayBoard(mine, row, col);
				break ;
			}
			else //ä¸æ˜¯é›·
			{
				//è®¡ç®—(x,y)ä½ç½®å‘¨å›´æœ‰å‡ ä¸ªé›·
				int count = get_mine_count(show, row,  col);
				show[x][y] = count + '0' ; //è¿™é‡Œæ˜¯+ ï¼ï¼ï¼âœ¨
				DisplayBoard(show, row, col);
				win ++ ;
			}
		}
		else
		{
			printf("åæ ‡éæ³•ï¼Œè¯·é‡æ–°è¾“å…¥ï¼\n");
		}
     }
	if(win == row * col - EASY_COUNT)
	{
		printf("Victory!\n");
		DisplayBoard(mine, row, col);
	}
}

