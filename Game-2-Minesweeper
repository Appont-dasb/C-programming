test.c

#define _CRT_SECURE_NO_WARNINGS 1

#include"game.h"

void menu()
{
	printf("****************************\n");
	printf("****      1.  play      ****\n");
	printf("****      0.  exit      ****\n");
	printf("****************************\n");
}

void game()
{
	//1. å­˜å‚¨é›·çš„ä¿¡æ¯
	char mine[ROWS][COLS] = { 0 };//  11*11
	//2. æ’æŸ¥é›·çš„ä¿¡æ¯
	char show[ROWS][COLS] = { 0 };
	//åˆå§‹åŒ–
	InitBoard(mine , ROWS, COLS, '0');

	InitBoard(show , ROWS, COLS, '*');
	//æ‰“å°æ£‹ç›˜

	//æ£‹ç›˜çš„å­˜å‚¨ä¿¡æ¯ä¸æ‰“å°
	//DisplayBoard(mine, ROW, COL);
	DisplayBoard(show, ROW, COL);
	
	//å¸ƒç½®é›·
	SetMine(mine, ROW, COL);
	//DisplayBoard(mine, ROW, COL);
	
	//æ‰«é›·
	FindMine(mine, show, ROW, COL);


}

void test()
{
	int input = 0 ;
	srand((unsigned int ) time(NULL));

	do
	{
		menu();
		printf("è¯·é€‰æ‹©:>\n");
		scanf("%d", &input);
		switch (input)
		{
		case 1:
			{
				game();

				break;
			}
		case 0:
			{
				printf("é€€å‡ºæ¸¸æˆï¼\n");
				break;
			}
		default:
			{
				printf("è¾“å…¥é”™è¯¯ï¼Œè¯·é‡æ–°è¾“å…¥:>\n");
				break;
			}
		}

	}while(input);
}

int main()
{
	test();
	return 0;
}
